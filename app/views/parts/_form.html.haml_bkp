= form_for @part do |f|
  -if @part.errors.any?
    #error_explanation
      %h2= "#{pluralize(@part.errors.count, "error")} prohibited this part from being saved:"
      %ul
        - @part.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :sku
    = f.number_field :sku
  .field
    = f.label :description
    = f.text_field :description
  .actions
    = f.submit 'Save'
