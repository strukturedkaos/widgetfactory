- model_class = @part.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @part.name
%p
  %strong= model_class.human_attribute_name(:sku) + ':'
  %br
  = @part.sku
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @part.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), parts_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_part_path(@part), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), part_path(@part), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
