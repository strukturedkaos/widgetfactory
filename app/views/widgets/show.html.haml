- model_class = @widget.class
%h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @widget.name
%p
  %strong= model_class.human_attribute_name(:quantity) + ':'
  %br
  = @widget.quantity
%p
  = render :partial => 'components'


.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), widgets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_widget_path(@widget), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), widget_path(@widget), :method => "delete", :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')), :class => 'btn btn-danger'
